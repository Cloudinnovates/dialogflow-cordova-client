        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/SoundRecorder/AISoundRecorderDelegate.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/SoundRecorder/AISoundRecorderConstants.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/SoundRecorder/AISoundRecorderConstants.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/Streamer/OPStreamBuffer.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/Streamer/OPStreamBuffer.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/Streamer/OPStreamBufferDelegate.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <!-- support header and source file -->

        <header-file src="src/ios/ApiAIPlugin.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="src/ios/ApiAIPlugin.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/AFNetworking/AFNetworking/AFHTTPRequestOperation.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFHTTPRequestOperation.m" />
        <header-file src="libs/ios/AFNetworking/AFNetworking/AFHTTPRequestOperationManager.h" />
