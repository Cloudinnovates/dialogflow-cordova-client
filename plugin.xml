        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/RecordDetector/AIRecordDetector.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/SoundRecorder/AIAudioUtils.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/SoundRecorder/AIAudioUtils.c" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
