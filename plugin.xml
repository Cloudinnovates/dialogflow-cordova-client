<?xml version='1.0' encoding='utf-8'?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="ai.api.apiaiplugin"
        version="1.1.2">
    
    <name>ApiAISDKPlugin</name>
    
    <description>Plugin makes it easy to integrate your Cordova application with http://api.ai natural language processing service.</description>
    <author>api.ai</author>
    <keywords>language processing,voice recognition</keywords>
    <license>Apache 2.0 License</license>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>
    
    <dependency id="android.support.v4"/>

    <js-module name="ApiAIPlugin" src="www/ApiAIPlugin.js">
        <clobbers target="window.ApiAIPlugin" />
    </js-module>
    
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="ApiAIPlugin">
                <param name="ios-package" value="ApiAIPlugin" />
            </feature>
        </config-file>
        
        <!-- public header and source file -->

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/ApiAI.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;"/>
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/ApiAI.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIRequest.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIRequest.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AITextRequest.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AITextRequest.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIVoiceRequest.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIVoiceRequest.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIConfiguration.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIDefaultConfiguration.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Classes/AIDefaultConfiguration.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <!-- private header and source file -->
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AIDataService_Private.h" />
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/ApiAI_ApiAI_Private.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/AIAlgorithmDetector.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/AIAlgorithmDetector.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/AIAlgorithmDetectorDelegate.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/AIAlgorithmDetectorTypes.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/Algorithms/EnergyAndZeroCross/EnergyAndZeroCross.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
        <source-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/AlgorithmDetector/Algorithms/EnergyAndZeroCross/EnergyAndZeroCross.m" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />

        <header-file src="libs/ios/api-ai-ios-sdk/ApiAI/Private/Network/AIDataService.h" compiler-flags="&quot;-std=gnu99 -fmodules&quot;" />
