        <header-file src="libs/ios/AFNetworking/AFNetworking/AFSecurityPolicy.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFSecurityPolicy.m" />
        <header-file src="libs/ios/AFNetworking/AFNetworking/AFURLConnectionOperation.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFURLConnectionOperation.m" />
        <header-file src="libs/ios/AFNetworking/AFNetworking/AFURLRequestSerialization.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFURLRequestSerialization.m" />
        <header-file src="libs/ios/AFNetworking/AFNetworking/AFURLResponseSerialization.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFURLResponseSerialization.m" />
        <header-file src="libs/ios/AFNetworking/AFNetworking/AFURLSessionManager.h" />
        <source-file src="libs/ios/AFNetworking/AFNetworking/AFURLSessionManager.m" />

        <header-file src="libs/ios/CWLSynthesizeSingleton/CWLSynthesizeSingleton.h" />
        
        <framework src="Security.framework" />
        <framework src="Foundation.framework" />
        <framework src="CoreAudio.framework" />
    </platform>
    
    <!-- Android -->
    
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="ApiAIPlugin">
                <param name="android-package" value="ai.api.ApiAiPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.RECORD_AUDIO"/>
        </config-file>

         <!-- Apache Cordova 3.x. -->
        <config-file target="res/xml/config.xml" parent="widget">
            <feature name="ApiAIPlugin">
                <param name="android-package" value="ai.api.ApiAiPlugin" />
            </feature>
        </config-file>

        <source-file src="src/android/ApiAiPlugin.java" target-dir="src/ai/api" />
        <source-file src="libs/ailib.jar" target-dir="libs" />
        <source-file src="libs/commons-io-2.4.jar" target-dir="libs" />
        <source-file src="libs/gson-2.3.jar" target-dir="libs" />
    </platform>
    
</plugin>